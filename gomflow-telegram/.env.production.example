# GOMFLOW Telegram Bot - Production Environment Variables

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://gomflow-telegram.railway.app/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Service URLs (Production)
CORE_API_URL=https://gomflow-core.vercel.app
SMART_AGENT_SERVICE_URL=https://gomflow-smart-agent.railway.app
PAYMENT_SERVICE_URL=https://gomflow-payments.railway.app
WHATSAPP_SERVICE_URL=https://gomflow-whatsapp.railway.app
DISCORD_SERVICE_URL=https://gomflow-discord.railway.app

# Service Authentication
INTERNAL_SERVICE_KEY=your_internal_service_key_here
CORE_API_KEY=your_core_api_key_here

# Redis Configuration (for queues and sessions)
REDIS_URL=redis://your-redis-url:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=gomflow:telegram:

# Queue Configuration
BULL_BOARD_ENABLED=false
QUEUE_CONCURRENCY=10
QUEUE_MAX_STALLED_COUNT=3
QUEUE_MAX_STALLED_INTERVAL=30000

# Bot Configuration
BOT_USERNAME=gomflow_bot
DEFAULT_LANGUAGE=en
SESSION_TTL=86400000
MAX_SESSION_SIZE=1048576

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_HITS=30
RATE_LIMIT_SKIP_SUCCESSFUL=true

# File Upload Configuration
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/heic
TEMP_DIR=/tmp/telegram-uploads

# Environment
NODE_ENV=production
PORT=3000

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=gomflow-telegram

# Bot Features
ENABLE_PAYMENT_SCREENSHOTS=true
ENABLE_ORDER_MANAGEMENT=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
BULK_NOTIFICATION_BATCH_SIZE=50

# Health Check
HEALTH_CHECK_INTERVAL=30000
WEBHOOK_HEALTH_CHECK=true

# Error Recovery
MAX_RETRIES=3
RETRY_DELAY=5000
CIRCUIT_BREAKER_THRESHOLD=10

# Security
ALLOWED_IPS=149.154.160.0/20,91.108.4.0/22
WEBHOOK_IP_VERIFICATION=true
SECURE_SESSIONS=true