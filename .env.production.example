# GOMFLOW Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Node Environment
NODE_ENV=production

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters

# Redis Configuration
REDIS_URL=redis://user:password@host:port
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Payment Gateway Configuration (Philippines)
PAYMONGO_PUBLIC_KEY=pk_test_your_public_key
PAYMONGO_SECRET_KEY=sk_test_your_secret_key
PAYMONGO_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment Gateway Configuration (Malaysia)
BILLPLZ_API_KEY=your-billplz-api-key
BILLPLZ_X_SIGNATURE=your-billplz-x-signature
BILLPLZ_WEBHOOK_SECRET=your-billplz-webhook-secret

# WhatsApp Business API Configuration
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_APPLICATION_ID=your-discord-application-id

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-organization-id

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key

# Security Configuration
SECURITY_AUDIT_KEY=your-security-audit-key

# Monitoring Configuration
MONITORING_API_KEY=your-monitoring-api-key

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Application Performance Monitoring (DataDog)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@gomflow.com

# Domain Configuration
CORS_ORIGINS=https://gomflow.com,https://www.gomflow.com,https://app.gomflow.com
FRONTEND_URL=https://app.gomflow.com
API_URL=https://api.gomflow.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters
SESSION_TIMEOUT=3600000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
FEATURE_SMART_AGENT=true
FEATURE_ANALYTICS=true
FEATURE_MONITORING=true
FEATURE_SECURITY_AUDIT=true
FEATURE_MULTI_CURRENCY=true
FEATURE_VOICE_MESSAGES=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# CDN Configuration
CDN_URL=https://cdn.gomflow.com
STATIC_ASSETS_URL=https://static.gomflow.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=10000

# API Rate Limiting per Service
WHATSAPP_RATE_LIMIT=1000
TELEGRAM_RATE_LIMIT=30
DISCORD_RATE_LIMIT=50
PAYMENT_RATE_LIMIT=100

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# CORS Configuration
CORS_ENABLED=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=GOMFLOW is currently under maintenance. Please try again later.

# Timezone Configuration
DEFAULT_TIMEZONE=Asia/Manila
SUPPORTED_TIMEZONES=Asia/Manila,Asia/Kuala_Lumpur,Asia/Jakarta,Asia/Bangkok

# Currency Configuration
DEFAULT_CURRENCY=PHP
SUPPORTED_CURRENCIES=PHP,MYR,IDR,THB,SGD,USD

# Language Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,tl,ms,id,th

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_FORCE_UPDATE=false
MOBILE_STORE_URL_IOS=https://apps.apple.com/app/gomflow
MOBILE_STORE_URL_ANDROID=https://play.google.com/store/apps/details?id=com.gomflow

# Social Media Configuration
FACEBOOK_APP_ID=your-facebook-app-id
GOOGLE_CLIENT_ID=your-google-client-id
TWITTER_API_KEY=your-twitter-api-key

# Third-party Integrations
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Notification Preferences
NOTIFICATION_CHANNELS=email,sms,push,webhook
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=true
PUSH_NOTIFICATIONS=true
WEBHOOK_NOTIFICATIONS=true

# Performance Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100
COMPRESSION_ENABLED=true
GZIP_LEVEL=6

# Development Tools (disabled in production)
DEBUG_MODE=false
PROFILING_ENABLED=false
SWAGGER_ENABLED=false
GRAPHQL_PLAYGROUND=false