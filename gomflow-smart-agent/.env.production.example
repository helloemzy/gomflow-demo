# GOMFLOW Smart Agent - Production Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Core API Configuration
CORE_API_URL=https://gomflow.com/api
CORE_API_KEY=your_core_api_key_here

# File Storage Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/heic
TEMP_DIR=/tmp/gomflow-uploads
PROCESSED_DIR=/tmp/gomflow-processed

# OCR Configuration
TESSERACT_LANGUAGES=eng+fil+msa
OCR_TIMEOUT=30000
OCR_DPI=300

# Processing Configuration
CONFIDENCE_AUTO_APPROVE=85
CONFIDENCE_SUGGEST=60
PROCESSING_TIMEOUT=60000
MAX_CONCURRENT_PROCESSES=5

# Service Authentication
INTERNAL_SERVICE_KEY=your_internal_service_key_here
SERVICE_AUTH_HEADER=x-gomflow-auth

# Environment
NODE_ENV=production
PORT=3000

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=gomflow-smart-agent

# Performance Monitoring
PROCESSING_METRICS=true
PERFORMANCE_LOGGING=true

# Error Recovery
MAX_RETRIES=3
RETRY_DELAY=5000
CIRCUIT_BREAKER_THRESHOLD=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Health Check
HEALTH_CHECK_INTERVAL=30000