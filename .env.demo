# GOMFLOW Demo Environment Configuration
# This file is used for local and hosted demo deployments
# All values are safe for public repositories

# Demo Mode
DEMO_MODE=true
NODE_ENV=development

# Demo Database (using Supabase for demo)
NEXT_PUBLIC_SUPABASE_URL=https://demo.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=demo-key
SUPABASE_SERVICE_ROLE_KEY=demo-service-key

# Demo Payment Gateways (Mock)
PAYMONGO_SECRET_KEY=sk_test_demo_key
PAYMONGO_PUBLIC_KEY=pk_test_demo_key
BILLPLZ_SECRET_KEY=demo_billplz_secret
BILLPLZ_X_SIGNATURE_KEY=demo_signature_key

# Demo Messaging Services (Mock)
TWILIO_ACCOUNT_SID=demo_twilio_sid
TWILIO_AUTH_TOKEN=demo_twilio_token
TWILIO_WHATSAPP_NUMBER=+15551234567
TELEGRAM_BOT_TOKEN=demo:telegram_bot_token
DISCORD_TOKEN=demo_discord_token
DISCORD_CLIENT_ID=demo_client_id

# Demo AI Services (Mock)
OPENAI_API_KEY=sk-demo-key

# Demo URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
WHATSAPP_SERVICE_URL=http://localhost:3001
TELEGRAM_SERVICE_URL=http://localhost:3002
DISCORD_SERVICE_URL=http://localhost:3003
PAYMENTS_SERVICE_URL=http://localhost:3004
SMART_AGENT_SERVICE_URL=http://localhost:3005

# Demo Features
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_MOCK_PAYMENTS=true
NEXT_PUBLIC_ENABLE_DEMO_DATA=true

# Security (Demo)
JWT_SECRET=demo_jwt_secret_key_for_testing_only
ENCRYPTION_KEY=demo_encryption_key_32_chars_long

# File Storage (Demo)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=demo-gomflow
UPLOAD_MAX_SIZE=10485760

# Analytics (Demo)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
ENABLE_DEMO_METRICS=true