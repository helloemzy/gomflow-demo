# GOMFLOW Payment Service Configuration

# Service Configuration
PORT=3004
NODE_ENV=development
SERVICE_SECRET=your_random_service_secret

# Database (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# PayMongo Configuration (Philippines)
PAYMONGO_SECRET_KEY=sk_test_your_paymongo_secret_key
PAYMONGO_WEBHOOK_SECRET=whsec_your_paymongo_webhook_secret
PAYMONGO_API_URL=https://api.paymongo.com/v1

# Billplz Configuration (Malaysia)
BILLPLZ_API_KEY=your_billplz_api_key
BILLPLZ_COLLECTION_ID=your_billplz_collection_id
BILLPLZ_WEBHOOK_SECRET=your_billplz_webhook_secret
BILLPLZ_API_URL=https://www.billplz.com/api/v3

# Service URLs for communication
CORE_API_URL=http://localhost:3000
WHATSAPP_SERVICE_URL=http://localhost:3001
TELEGRAM_SERVICE_URL=http://localhost:3002
DISCORD_SERVICE_URL=http://localhost:3003

# Webhook URLs (for payment provider configuration)
WEBHOOK_BASE_URL=https://your-domain.com
PAYMONGO_WEBHOOK_URL=https://your-domain.com/api/webhooks/paymongo
BILLPLZ_WEBHOOK_URL=https://your-domain.com/api/webhooks/billplz

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/payment-service.log