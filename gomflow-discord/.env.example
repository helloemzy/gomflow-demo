# GOMFLOW Discord Bot Service Configuration

# Service Configuration
PORT=3003
NODE_ENV=development
SERVICE_SECRET=your_random_service_secret_32_chars_min

# Database (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_application_client_id
DISCORD_CLIENT_SECRET=your_discord_application_client_secret

# Service URLs for communication
CORE_API_URL=http://localhost:3000
PAYMENT_SERVICE_URL=http://localhost:3004
SMART_AGENT_SERVICE_URL=http://localhost:3005
WHATSAPP_SERVICE_URL=http://localhost:3001
TELEGRAM_SERVICE_URL=http://localhost:3002

# File Upload Configuration
MAX_FILE_SIZE=25165824
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
TEMP_UPLOAD_DIR=temp

# Bot Features
ENABLE_SLASH_COMMANDS=true
ENABLE_SMART_PAYMENT_DETECTION=true
AUTO_DELETE_PROCESSED_IMAGES=true
IMAGE_RETENTION_HOURS=24
ENABLE_GUILD_COMMANDS=true
ENABLE_THREADING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_MESSAGES=30
RATE_LIMIT_MAX_UPLOADS=5
RATE_LIMIT_MAX_COMMANDS=20

# Security
CORS_ORIGIN=http://localhost:3000
INTERACTION_PUBLIC_KEY=your_discord_interaction_public_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/discord-service.log

# Queue Configuration
QUEUE_CONCURRENCY=5
MESSAGE_QUEUE_NAME=discord-messages
NOTIFICATION_QUEUE_NAME=discord-notifications
INTERACTION_QUEUE_NAME=discord-interactions

# Bot Behavior
DEFAULT_LANGUAGE=en
COMMAND_TIMEOUT_MS=30000
INTERACTION_TIMEOUT_MS=15000
MAX_CONCURRENT_INTERACTIONS=50

# Discord-Specific Features
EMBED_COLOR=#7C3AED
EMBED_THUMBNAIL_URL=https://gomflow.com/logo.png
MAX_EMBED_FIELDS=25
MAX_EMBED_DESCRIPTION_LENGTH=4096
MAX_BUTTON_LABEL_LENGTH=80