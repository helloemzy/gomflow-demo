# GOMFLOW Discord Bot - Production Environment Variables

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_PUBLIC_KEY=your_discord_public_key_here

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Service URLs
CORE_API_URL=https://gomflow.com/api
SMART_AGENT_SERVICE_URL=https://gomflow-smart-agent.railway.app
PAYMENTS_SERVICE_URL=https://gomflow-payments.railway.app

# Service Authentication
INTERNAL_SERVICE_KEY=your_internal_service_key_here
CORE_API_KEY=your_core_api_key_here

# Redis Configuration (for queues and sessions)
REDIS_URL=redis://your-redis-url:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=1
REDIS_KEY_PREFIX=gomflow:discord:

# Queue Configuration
BULL_BOARD_ENABLED=false
QUEUE_CONCURRENCY=15
QUEUE_MAX_STALLED_COUNT=3
QUEUE_MAX_STALLED_INTERVAL=30000

# Bot Configuration
DEFAULT_LANGUAGE=en
SESSION_TTL=86400000
GUILD_CACHE_TTL=3600000
COMMAND_COOLDOWN=5000

# Slash Commands Configuration
DEPLOY_COMMANDS_ON_START=false
GLOBAL_COMMANDS=true
COMMAND_PERMISSIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_HITS=50
RATE_LIMIT_SKIP_SUCCESSFUL=true

# File Upload Configuration
MAX_FILE_SIZE=8388608
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
TEMP_DIR=/tmp/discord-uploads

# Environment
NODE_ENV=production
PORT=3000

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=gomflow-discord

# Bot Features
ENABLE_PAYMENT_SCREENSHOTS=true
ENABLE_ORDER_MANAGEMENT=true
ENABLE_GUILD_MANAGEMENT=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_COMMANDS=true

# Guild Configuration
MAX_GUILDS_PER_BOT=1000
AUTO_LEAVE_INACTIVE_GUILDS=false
GUILD_INACTIVITY_THRESHOLD=2592000000

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
BULK_NOTIFICATION_BATCH_SIZE=25

# Embed Configuration
EMBED_COLOR_PRIMARY=0x7C3AED
EMBED_COLOR_SUCCESS=0x10B981
EMBED_COLOR_ERROR=0xEF4444
EMBED_COLOR_WARNING=0xF59E0B

# Interaction Configuration
INTERACTION_TIMEOUT=300000
MODAL_TIMEOUT=600000
BUTTON_TIMEOUT=300000

# Health Check
HEALTH_CHECK_INTERVAL=30000
DISCORD_HEARTBEAT_CHECK=true

# Error Recovery
MAX_RETRIES=3
RETRY_DELAY=5000
CIRCUIT_BREAKER_THRESHOLD=10

# Security
VERIFY_DISCORD_SIGNATURE=true
ALLOWED_GUILDS=
ADMIN_USER_IDS=your_admin_user_id_here

# Performance
CACHE_ENABLED=true
CACHE_TTL=300000
PRESENCE_UPDATE_INTERVAL=300000