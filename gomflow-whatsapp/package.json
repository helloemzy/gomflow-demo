{
  "name": "gomflow-whatsapp",
  "version": "1.0.0",
  "description": "WhatsApp Business API integration service for GOMFLOW",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test:smoke:staging": "npm run test:smoke -- --env=staging",
    "test:smoke:production": "npm run test:smoke -- --env=production",
    "test:smoke": "jest --testPathPattern=smoke"
  },
  "dependencies": {
    "express": "^4.18.2",
    "twilio": "^4.19.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "@gomflow/shared": "file:../gomflow-shared",
    "bull": "^4.11.5",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/bull": "^4.10.0",
    "typescript": "^5.0.0",
    "tsx": "^4.6.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}